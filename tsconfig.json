{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["types/*"],
      "@controllers/*": ["controllers/*"],
      "@database/*": ["database/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "types": ["node"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
